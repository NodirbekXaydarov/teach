<odoo>
    <data>
        <!-- Tree View Definition -->
        <record id="view_teach_tree" model="ir.ui.view">
            <field name="name">teach.tree</field>
            <field name="model">teach</field>
            <field name="arch" type="xml">
                <tree string="Input Mask Tree View">
                    <field name="name_teach"/>
                    <field name="subtitle"/>
                </tree>
            </field>
        </record>

        <!-- Form View Definition -->
        <record id="view_teach_form" model="ir.ui.view">
            <field name="name">teach.form</field>
            <field name="model">teach</field>
            <field name="arch" type="xml">
                <form string="Input Mask Form View">
                    <group>
                        <field name="name_teach"/>
                        <field name="subtitle"/>
                    </group>
                </form>
            </field>

        </record>
        <record id="action_teach_model" model="ir.actions.act_window">
            <field name="name">teach</field>
            <field name="res_model">teach</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_teach_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Yangi ma'lumotlar qo'shish uchun "Yangi" tugmasini bosing.
                </p>
            </field>
        </record>
        <menuitem id="menu_your_model_main"  name="Teach" action="action_teach_model" sequence="10"/>
    </data>
</odoo>
