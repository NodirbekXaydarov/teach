<templates id="template" xml:space="preserve">
    <t t-name="input_mask.GenderWidgetTemplate">
        <p>
            <t t-out="value"/>
        </p>
        <div class="mydict tw-mt-[-30px]">
            <div>
                <label>
                    <input type="radio" name="radio" t-att-checked="value === 'female'" t-on-change="handleChange" value="female"/>
                    <span>Women</span>
                </label>
                <label>
                    <input type="radio" name="radio" t-att-checked="value ==='male'" t-on-change="handleChange" value="male"/>
                    <span>Men</span>
                </label>
                <label>
                    <input type="radio" name="radio" t-att-checked="value ==='divided'" t-on-change="handleChange" value="divided"/>
                    <span>Divided</span>
                </label>
            </div>
        </div>
    </t>
</templates>
